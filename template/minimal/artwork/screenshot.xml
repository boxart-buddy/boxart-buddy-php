<?xml version="1.0" encoding="UTF-8"?>
<artwork>
    <output type="cover" width="640" height="480">

        {% set cover = assetSize('screenshot').cover(640,480) %}

        <layer resource="screenshot" height="{{ cover['h'] }}"
               width="{{ cover['w'] }}"
               align="center"
               valign="middle">
            <opacity value="30"/>
        </layer>

    </output>
</artwork>
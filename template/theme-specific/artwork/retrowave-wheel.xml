<?xml version="1.0" encoding="UTF-8"?>
<artwork>

    {% set wheel = assetSize('wheel').fit(270,90) %}

    <output type="cover" width="640" height="480">

        <layer resource="wheel"
               width="{{ wheel['w'] }}"
               height="{{ wheel['h'] }}"
               align="center" valign="middle"
               x="160"
               y="135">
            <stroke width="2" color="#FA73FF"/>
            <!-- shadow is not pink so maybe look to do it in post processing -->
            <!--            <shadow distance="5" softness="0" opacity="100"/>-->

        </layer>

    </output>
</artwork>

<?xml version="1.0" encoding="UTF-8"?>
<artwork>

    {% set cover = assetSize('screenshot').cover(52,40) %}

    <output type="cover" width="640" height="480">
        <layer resource="screenshot" height="{{ cover['h'] }}" width="{{ cover['w'] }}"
               align="center"
               valign="middle"
               x="-260">
        </layer>

        <mask file="image-frame-mask.png" width="640" height="480" align="center" valign="middle"/>

    </output>

    <output type="screenshot" width="515" height="275">
        <layer resource="screenshot" height="275" align="center" valign="middle"/>
    </output>
</artwork>